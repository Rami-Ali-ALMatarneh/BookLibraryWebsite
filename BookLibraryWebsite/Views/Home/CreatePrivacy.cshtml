@{
    Layout = "~/Views/Shared/_LayoutNavbarFooter.cshtml";
    ViewBag.Title = "Create Contact";
    //var imgBook = "/ImagePage/" + (string.IsNullOrEmpty(Model.book.photoPath) ? "images.png" : Model.book.photoPath);
}
<div class="createContact pt-5 pb-5">
    <div class="container d-flex justify-content-center align-items-center">
        <form class="PrivacyInfo w-75 d-flex flex-column mb-5">
            <h6 class="">
                PRIVACY INFORMATION
            </h6>
            <div class="mb-3">
                <label class="form-label">Email Address:</label>
                <input type="email" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control">
            </div>
            <div class="mb-3 mt-3 d-flex justify-content-start align-items-end gap-4">
                <a asp-controller="home" asp-action="CreateContact" class="btn Btnsecondary w-25 ">Back</a>
                <input type="submit" class="btn w-25" value="Create">
            </div>
        </form>
    </div>
</div>