@{
    Layout = "~/Views/Shared/_LayoutNavbarFooter.cshtml";
    ViewBag.Title = "Create Contact";
    //var imgBook = "/ImagePage/" + (string.IsNullOrEmpty(Model.book.photoPath) ? "images.png" : Model.book.photoPath);
}

<div class="createContact pt-5 pb-5">
    <div class="container d-flex justify-content-center align-items-center">
        <form class="ContactInfo mb-5 w-75 d-flex flex-column">
            <h6 class="w-100 headerCreate">
                CONTACT INFORMATION
            </h6>
            <div class="mb-3 ">
                <label class="form-label">Contact Number:</label>
                <input type="text" class="form-control">
            </div>
            <div class="mb-3 ">
                <label class="form-label">Email Address:</label>
                <input type="email" class="form-control">
            </div>
            <div class="mb-3 ">
                <label class="form-label">Country:</label>
                <select class="form-select Country" aria-label="Default select example">
                </select>
            </div>
            <div class="mb-3 mb-3 mt-3 d-flex justify-content-start align-items-end gap-4">
                <a asp-controller="home" asp-action="CreateBasic" class="btn Btnsecondary w-25 ">Back</a>
                <input type="submit" class="btn w-25" value="Next">
            </div>
        </form>
    </div>
</div>