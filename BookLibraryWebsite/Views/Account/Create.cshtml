
@{
    Layout = "~/Views/Account/_LayoutAccount.cshtml";
    ViewBag.Title = "Profile";
}
<div class="Profile pt-5 pb-5">
    <div class="container">
        <form class="create boxPorfile2 w-100">
            <div class="row BasicInfo mb-5">
                <h6>BASIC INFORMATION</h6>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Full Name:</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Professional title:</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Languages:</label>
                    <select class="form-select Languages" aria-label="Default select example">
                    </select>
                </div>
                <div class="mb-3  gap-3 col-md-6 col-sm-12">
                    <label class="form-label">Gender:</label>
                    <div class="d-flex gap-4">
                        <div class="form-check d-flex justify-content-center align-items-center gap-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Male
                            </label>
                        </div>
                        <div class="form-check d-flex justify-content-center align-items-center gap-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Female
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Image:</label>
                    <input type="file" class="form-control">
                </div>
            </div>
            <div class="row ContactInfo mb-5">
                <h6 class="col-12">
                    CONTACT INFORMATION
                </h6>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Contact Number:</label>
                    <input type="text" class="form-control">
                </div>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Email Address:</label>
                    <input type="email" class="form-control">
                </div>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Country:</label>
                    <select class="form-select Country" aria-label="Default select example">
                    </select>
                </div>
            </div>
            <div class="row PrivacyInfo mb-5">
                <h6 class="col-12">
                    PRIVACY INFORMATION
                </h6>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Email Address:</label>
                    <input type="email" class="form-control">
                </div>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" class="form-control">
                </div>
            </div>           
            <a asp-action="login" asp-controller="Account" class="btn " style="width:150px">Back</a>

            <button type="submit" class="btn" style="width:150px">Create</button>

        </form>
        </div>
    </div>

