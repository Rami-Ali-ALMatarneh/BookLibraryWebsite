                rewind: true,
            }).mount();

            new Splide('#carousel2', {
                type: 'loop',
                drag: 'free',
                focus: 'center',
                perPage: 5,
                autoplay: true,
                interval: 3000,
                speed: '1000',
                breakpoints: {
                    640: {
                        perPage: 1,

                    },
                    767: {
                        perPage: 2,

                    },
                    1024: {
                        perPage: 3,

                    },
                },
            }).mount();
            new Splide('#carousel3', {
                type: 'loop',
                perPage: 1,
                autoplay: true,
                interval: 3000,
                speed: 1500,
                speed: '1500',
                focus: 'center',
            }).mount();
        });

