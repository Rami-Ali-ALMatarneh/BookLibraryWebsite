                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Us</a>
                    </li>

                </ul>
                <a class="btn" asp-controller="Home" asp-action="AddBook">Upload Book</a>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    @* start footer *@
